<p id="notice"><%= notice %></p>

<h1>Список Книг</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Главный автор</th>
      <th>Соавторы</th>
      <th>Комментарий</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author.name %></td>
        <td>
          <% book.authors.each do |co_author| %>
            <%= co_author.name %><br>
          <% end %>
        </td>
        <td><%= book.comment %></td>
        <td><%= link_to 'Показать', book %></td>
        <td><%= link_to 'Редактировать', edit_book_path(book) %></td>
        <td><%= link_to 'Удалить', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить новую книгу', new_book_path %><br>
