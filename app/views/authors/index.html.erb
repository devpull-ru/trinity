<p id="notice"><%= notice %></p>

<h1>Список авторов</h1>

<table>
  <thead>
    <tr>
      <th>Имя</th>
      <th>Комментарий</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.comment %></td>
        <td><%= link_to 'Показать', author %></td>
        <td><%= link_to 'Редактировать', edit_author_path(author) %></td>
        <td><%= link_to 'Удалить', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить Автора', new_author_path %><br>
<%= link_to 'Список книг', books_path %>